generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id Int @id @default(autoincrement())
  email String @unique
  password String 
  role Role @default(USER)
  trips Trip[]
  @@map("users")
}

model Trip {
  id Int @id @default(autoincrement())
  name String
  startDate String
  endDate String
  traveller User @relation(fields: [userId], references: [id])
  userId Int
  destinations Destination[]
  @@map("trip")
}

model Destination{
  id Int @id @default(autoincrement())
  city String
  country String
  arrivalDate String
  departureDate String
  trip Trip @relation(fields: [tripId], references: [id])
  tripId Int
  activity Activity[]
  accommodation Accommodation[]
  @@map("destination")
}

model Activity {
  id Int @id @default(autoincrement())
  destination Destination @relation(fields: [destinationId], references: [id])
  destinationId Int
  title String
  startTime String
  endTime String
}

model Accommodation{
  id Int @id @default(autoincrement())
  destination Destination @relation(fields: [destinationId], references: [id])
  destinationId Int
  name String
  type String
  pricePerNight Decimal
}

enum Role  {
  USER
  ADMIN
}